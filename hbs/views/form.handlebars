<section class="p-4 bg-primary">
    <h2 class="text-primary">Ingrese el Producto</h2>
    <form action='/productos' method='POST'>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='name'>Nombre del Producto:</label>
            <input class="form-control" type='text' name='name' />
        </div>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='price'>Precio:</label>
            <input class="form-control" type='number' name='price' />
        </div>
        <div class='mb-3'>
            <label class='form-label fw-bold' for='picture'>Fotograf√≠a URL</label>
            <input class="form-control" type='url' name='picture' />
        </div>
        <div class='mb-3'>
            <input class="btn btn-outline-primary" type='submit' value='Enviar' />
        </div>
    </form>
    <div>
        <a href="./listaproductos">
            <button class="btn btn-outline-danger">Ver Productos</button>
        </a>
    </div>
</section>